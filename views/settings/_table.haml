%table{:width => '50%'}
  %thead
    %th
    %th
    %th
  %tbody
    -Category.all.each do |category|
      %tr
        %td
          .span.cat_label{:style => "background-color:#{category.color};"} #{category.name}
        %td{:style => "text-align:right;"}
          %a.btn{href: "/settings/#{category.id}/edit"}
            %i.icon-pencil
        %td{:style => "text-align:right;"}
          %a.btn{onclick: "delete_category(#{category.id})"}
            %i.icon-trash
