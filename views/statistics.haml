  %script{ :type => "text/javascript", :src => "/js/flotr2.min.js"}
  :javascript
    function doStuff(form) {
      (function basic_pie(container) {
        var form_from = form.date_from.value;
        var form_to = form.date_to.value;
        var graph,

        graph = Flotr.draw(container, [#{Grapher.get_pie_data("form_from", "form_to", ["1", "2"])}], {

          colors : #{"['#999999', '#468847', '#F89406', '#3986AC', '#323232', '#B84947']"},
          HtmlText : false,
          grid : {
            verticalLines : false,
            horizontalLines : false,
            outlineWidth:0
          },
          xaxis : { showLabels : false },
          yaxis : { showLabels : false },
          pie : { show : true },
          mouse : { track : true },
          legend : {
            position : 'se',
            backgroundColor : '#FFF'
          }
        });
      })(document.getElementById("piechart"));
    }