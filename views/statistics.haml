.container
  %h3 Statistik fÃ¶r #{env['warden'].user.username}
  %center
    %form.form-inline{action: '/statistics/update', method: 'post'}
      = haml :_filter_form
      %input.btn.btn{type: 'submit', value: 'Visa', onClick: 'doStuff()'}
  %input.btn.btn{type: 'button', value: 'do stuff', onClick: 'doStuff()'}    
  #example
  %script{ :type => "text/javascript", :src => "/js/flotr2.min.js"}
  :javascript
    function doStuff() {
      (function basic_pie(container) {
        var
          d1 = [[0, 1]],
          d2 = [[0, 0]],
          d3 = [[0, 1]],
          d4 = [[0, 0]],
          de = [[0, 1]],
          graph;
        graph = Flotr.draw(container, [{ data : d1, label : 'Utgift' },
          { data : d2, label : 'Inkomst' },
          { data : d3, label : 'Mat & Dryck' },
          { data : de, label : 'Fritid'},
          { data : de, label : 'Bankomat'},
          { data : d4, label : 'Transport' }], {

          colors : ['#999999', '#468847', '#F89406', '#3986AC', '#323232', '#B84947'],
          HtmlText : false,
          grid : {
            verticalLines : false,
            horizontalLines : false,
            outlineWidth:0
          },
          xaxis : { showLabels : false },
          yaxis : { showLabels : false },
          pie : { show : true },
          mouse : { track : true },
          legend : {
            position : 'se',
            backgroundColor : '#FFF'
          }
        });
      })(document.getElementById("example"));
    }