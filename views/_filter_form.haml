.control-group
  -Category.all.each do |category|
    -if Transaction.where(category_id: category.seq_id).count == 0 then next end
    %label.checkbox.inline
      .span.cat_label{style: "background-color:#{category.color};"}
        %input{class: 'click_filter', id: "cat#{category.seq_id}", type: 'checkbox', checked: 'yes'} #{category.name}
.control-group
  .small-box
    .pull-left
      %label.control-label Fr√•n
      .input-prepend
        %span.add-on
          %i.icon-calendar
        %input.input-small.text_filter{id: "from", type: 'text', value: "#{Transaction.first_transaction(@user).to_s}"}
      %label.control-label till
      .input-prepend
        %span.add-on
          %i.icon-calendar
        %input.input-small.text_filter{id: "to", type: 'text', value: "#{Transaction.last_transaction(@user).to_s}"}
    .pull-right
      .input-prepend
        %span.add-on
          %i.icon-search
        %input.span2.text_filter{type: 'text', id: 'query'}
    .clearfix
